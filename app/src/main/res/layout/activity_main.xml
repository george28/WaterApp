<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
     android:background="@drawable/water_back_ground"
    >

    <TextView android:text="Please enter your weight" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:id="@+id/label"
        android:textColor="#f0000000"
        android:textStyle="italic"
        android:textSize="20dp"
        android:visibility="visible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextWeight"
        android:layout_below="@+id/label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:background="#84fdff"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate how much water you drink a day."
        android:id="@+id/textViewCalculate"
        android:layout_below="@+id/editTextWeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:textColor="#060202"
        android:textStyle="italic"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calculateButton"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewCalculate"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textStyle="italic"
        android:textColor="#fe000000"
        android:clickable="true"
        android:onClick="setContentView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextResulte"
        android:layout_below="@+id/calculateButton"
        android:layout_marginTop="47dp"
        android:layout_alignLeft="@+id/calculateButton"
        android:layout_alignStart="@+id/calculateButton"
        android:layout_alignRight="@+id/calculateButton"
        android:layout_alignEnd="@+id/calculateButton"
        android:background="#a7faff" />

</RelativeLayout>
